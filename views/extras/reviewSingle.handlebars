<main>
  <div id='reviewSingle'>
    <h1>{{review.user}}</h1>
    <h2>{{review.gameName}}</h2>
    <hr>

    <h2>"{{review.title}}"</h2>
    <br>
    <p>{{review.postContent}}</p>
    <br>
    <p>Date Posted: {{review.datePublished}}</p>
    <!-- Single review content goes here -->


    <div id='commentDiv'>
      <h1>Comments</h1>
      <hr>
      <form id='commentForm' action='/reviews/comment' method="POST">
        <input type='text' id='newComment' name='newComment' placeholder=' New Comment'/>
        <input type='text' id='reviewID' name='reviewId' value='{{review._id}}' hidden/>
        <button type='submit' id='commentSubmit'>Post</button>
      </form>
      {{!-- {{/if}} --}}

      <!-- Comment content goes here -->
      <div>
        <br>
        {{#each review.comments}}
        <p>{{this.commentUsername.gamingUser}}: {{this.commentContent}}</p>
        <p>{{this.dateCreated}}</p>
        <hr>
        {{/each}}
      </div>

    </div>
  </div>
</main>
