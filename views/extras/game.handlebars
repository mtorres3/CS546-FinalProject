<main>

<div id="gameDiv">
<h1 id="gameName">{{game.name}}</h1>

{{#if status}}
{{#if favoriteStatus}}
  <div>
  <form action='/profile/favorite' method='POST'>
    <button type='submit' id='favButton'>Unfavorite</button>
    <input type='text' id='favStatus' name='favStatus' value='{{favoriteStatus}}' hidden/>
    <input type='text' id='gameId' name='gameId' value='{{game._id}}' hidden/>
  </form>
</div> {{else}}
<form action='/profile/favorite' method='POST'>
  <input type='text' id='favStatus' name='favStatus' value='{{favoriteStatus}}' hidden/>
  <input type='text' id='gameId' name='gameId' value='{{game._id}}' hidden/>
  <button type='submit' id='favButton'>Favorite</button>
</form>
{{/if}}
{{else}}
<div></div>
{{/if}}

<br>
<hr>
<br>
<dl>
<dt></dt>
  <dd>
  <img alt='{{game.name}}' src='{{game.artwork}}' class='gameArt'></img>
  </dd>

  <dt>Genre:</dt>
  <dd>
  <ul>
  {{#each game.genre}}
  <li>{{this}}</li>
  {{/each}}
  </ul>
  </dd>

  <dt>Platforms:</dt>
  <dd>
  <ul>
  {{#each game.platforms}}
  <li>{{this}}</li>
  {{/each}}
  </ul>
  </dd>

  <dt>Description:</dt>
  <dd>{{{game.description}}}</dd>

</dl>
</div>
</main>
