<main>

<div id="gameDiv">
<h1 id="gameName">{{game.name}}</h1>

{{#if status}}
  <div>
  <form action='/profile/favorite' method='POST'>
    <input type='checkbox' id='favCheckbox' name='favorited'/>
    <button type='submit' id='favButton'>Favorite</button>
  </form>
</div> {{else}}
<div></div>
{{/if}}

<br>
<hr>
<br>
<dl>
  <div class='GameInfo'>


  <img src='{{game.artwork}}' class='gameArt'></img>
  <br>
  <br>
  <dt>Genre:</dt>
  <ul>
  {{#each game.genre}}
  <li>{{this}}</li>
  {{/each}}
  </ul>
  <br>
  <dt>Platforms:</dt>
  <ul>
  {{#each game.platforms}}
  <li>{{this}}</li>
  {{/each}}
  </ul>
  <br>
  <dt>Description:</dt>
  <dd>{{{game.description}}}</dd>
  </div>

</dl>
</div>
</main>
