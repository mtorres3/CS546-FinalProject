<main>
<div id="trendingDiv">
<h1 id="trendingName">Top 3 Trending Reviews</h1>

<br>
<hr>
<dl>
  <div class='TrendingInfo'>
  {{#each top}}
    <a href='/reviews/{{this._id}}' class='reviewLinks'>
    <h2>{{this.title}}</h2>
    <p>By: {{this.user}}</p>
    <p>Game: {{this.gameName}}</p>
    <br>
    <p>{{this.postContent}}</p>
    <br>
    <p>{{this.datePublished}}</p>
    </a>
    <hr>
  {{/each}}
  </div>

</dl>
</div>
</main>
