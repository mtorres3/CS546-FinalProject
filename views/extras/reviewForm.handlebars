<main>
  <div id='reviewFormDiv'>
  <h1 id='reviewFormH1'>Post a Review</h1>
  <hr>
  <br>
  <form id='reviewForm' action='/reviews/review' method='POST'>
    <div>
    <label for='reviewFormTitle'></label>
      <input type='text' id='reviewFormTitle' name='reviewFormTitle' placeholder='  Title'/>
    </div>
    <br>
    <div>
    <label for='gameReviewed'></label>
      <select name="gameReviewed" id="gameReviewed" placeholder='Game Reviewed'>
        <option value="Disco Elysium">Disco Elysium</option>
        <option value="God of War">God of War</option>
        <option value="The Last of Us">The Last of Us</option>
        <option value="The Witcher 3">The Witcher 3</option>
        <option value="Persona 5">Persona 5</option>
        <option value="Paper Mario">Paper Mario</option>
        <option value="Chrono Trigger">Chrono Trigger</option>
        <option value="Metal Gear Solid 3">Metal Gear Solid 3</option>
        <option value="The Last of Us: Part 2">The Last of Us: Part 2</option>
        <option value="Super Mario World">Super Mario World</option>
        <option value="The Legend of Zelda: A Link to The Past">The Legend of Zelda: A Link to The Past</option>
        <option value="Uncharted 4">Uncharted 4</option>
        <option value="Silent Hill 2">Silent Hill 2</option>
        <option value="The Legend of Zelda: Ocarina of Time">The Legend of Zelda: Ocarina of Time</option>
        <option value="Metroid Prime">Metroid Prime</option>
      </select>
    </div>
    <br>
    <div>
    <label for='reviewFormReview'></label>
      <textarea id='reviewFormReview' name='reviewFormReview' rows='10' cols='60' placeholder=' Review'></textarea>
    </div>
    <br>
    <button type='submit' id='reviewSubmit'>Submit</button>
  </form>
  </div>
</main>
